<%- include("../partials/header") %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col border p-2 col-11 col-sm-10 col-md-9 col-lg-7">
            <h1 class="mb-4">Create a New Campground</h1>

            <form action="/campgrounds" method="POST" class="mb-2">
                <div class="form-group">
                    <label>Campground Name</label>
                    <input class="form-control" type="text" name="name" placeholder="Title" required>
                </div>
                <div class="form-group">
                    <label>Campground Name</label>
                    <input class="form-control" type="number" name="price" placeholder="Price per night" min="0.01" step="0.01" required>
                </div>
                <div class="form-group">
                    <label>Image URL</label>
                    <input class="form-control" type="text" name="image" placeholder="Image URL" required>
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <textarea class="form-control" rows="5" name="description" placeholder="Description of the Campground..." required></textarea>
                </div>
                <button type="submit" class="btn btn-lg btn-primary">Submit</button>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>