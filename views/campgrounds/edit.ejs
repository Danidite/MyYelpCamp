<%- include("../partials/header") %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col border p-2 col-11 col-sm-10 col-md-9 col-lg-7">
            <h1 class="mb-4">EDIT "<%= campground.name %>"</h1>

            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" class="mb-2">
                <div class="form-group">
                    <label>Campground Name</label>
                    <input class="form-control" type="text" name="campground[name]" placeholder="Title" value="<%= campground.name %>" required>
                </div>
                <div class="form-group">
                    <label>Campground Name</label>
                    <input class="form-control" type="number" name="campground[price]" placeholder="Price per night" min="0.01" value="<%= campground.price %>" step="0.01" required>
                </div>
                <div class="form-group">
                    <label>Image URL</label>
                    <input class="form-control" type="text" name="campground[image]" placeholder="Image URL" value="<%= campground.image %>" required>
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <textarea class="form-control" rows="5" name="campground[description]" placeholder="Description of the Campground..." required><%= campground.description %></textarea>
                </div>
                <button type="submit" class="btn btn-lg btn-primary">Submit</button>
            </form>
            <a href="/campgrounds/<%= campground._id %>">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>