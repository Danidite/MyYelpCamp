<%- include("../partials/header") %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col border p-2 col-11 col-sm-10 col-md-9 col-lg-7">
            <h1 class="mb-4 text-center">Add New Comments to <br>"<%= campground.name %>"</h1>

            <form action="/campgrounds/<%= campground.id %>/comments" method="POST" class="mb-2">
                <div class="form-group">
                    <label>Comment</label>
                    <textarea class="form-control" rows="5" name="comment[text]" placeholder="Comment..." required></textarea>
                </div>
                <button type="submit" class="btn btn-lg btn-primary">Submit</button>
            </form>
            <a href="/campgrounds/<%= campground.id %>">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>